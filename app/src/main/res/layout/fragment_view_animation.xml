<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".fragment.ViewAnimationFragment">

    <TextView
        android:id="@+id/scale_animation_code"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="缩放动画:代码实现"
        app:layout_constraintBottom_toTopOf="@id/scale_animation_xml"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scale_animation_xml"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="缩放动画:xml实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scale_animation_code" />

    <TextView
        android:id="@+id/rotate_animation_code"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="旋转动画:代码实现"
        app:layout_constraintBottom_toTopOf="@id/rotate_animation_xml"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scale_animation_xml" />

    <TextView
        android:id="@+id/rotate_animation_xml"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="旋转动画:xml实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rotate_animation_code" />

    <TextView
        android:id="@+id/alpha_animation_code"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="透明动画:代码实现"
        app:layout_constraintBottom_toTopOf="@id/alpha_animation_xml"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rotate_animation_xml" />

    <TextView
        android:id="@+id/alpha_animation_xml"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="透明动画:xml实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alpha_animation_code" />

    <TextView
        android:id="@+id/translate_animation_code"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="平移动画:代码实现"
        app:layout_constraintBottom_toTopOf="@id/translate_animation_xml"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alpha_animation_xml" />

    <TextView
        android:id="@+id/translate_animation_xml"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="平移动画:xml实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/translate_animation_code" />

    <TextView
        android:id="@+id/set_animation_code_1"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="复合动画:代码实现"
        app:layout_constraintBottom_toTopOf="@id/set_animation_xml_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/translate_animation_xml" />

    <TextView
        android:id="@+id/set_animation_xml_1"
        style="@style/button"
        android:background="@drawable/btn_background"
        android:text="复合动画:xml实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_animation_code_1" />

    <ImageView
        android:id="@+id/test_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_for_tween"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>